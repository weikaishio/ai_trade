# ===============================================
# 同花顺交易API服务配置文件
# ===============================================

# ===== API服务配置 =====
API_HOST=127.0.0.1
API_PORT=8080
API_ALLOWED_ORIGINS=http://localhost:3000

# ===== 安全配置 =====
# 重要: 生产环境必须修改这些密钥！
API_KEYS=test-api-key-change-me,another-key
JWT_SECRET_KEY=change-this-to-a-very-long-random-secret-key-at-least-32-chars
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===== IP白名单 =====
ENABLE_IP_WHITELIST=false
IP_WHITELIST=127.0.0.1

# ===== 交易配置 =====
DEFAULT_CONFIRM=false
TRADING_TIMEOUT=30
MAX_QUEUE_SIZE=100

# ===== 市价买入 =====
MARKET_BUY_PRICE_RATIO=0.99
ENABLE_AKSHARE=true

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FILE=api_trading.log
LOG_REQUESTS=true

# ===== 系统配置 =====
DEBUG=false
ENVIRONMENT=development
